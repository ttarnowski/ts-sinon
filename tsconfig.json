{
    "compilerOptions": {
        "declaration": true,
        "declarationDir": "./dist",
        "module": "commonjs",
        "lib": ["es2017", "es7", "es6", "dom"],
        "outDir": "./dist",
        "target": "es5",
        "moduleResolution": "node"
    },
    "typedocOptions": {
        "mode": "modules",
        "out": "docs"
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist", 
        "./src/index.spec.ts"
    ]
}
